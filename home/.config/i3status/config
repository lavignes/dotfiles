general {
    interval = 5
    output_format = "i3bar"
    colors = true
    color_good = "#00FF00"
    color_degraded = "#FFFF00"
    color_bad = "#FF0000"
}

order += "battery 0"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "tztime local"

