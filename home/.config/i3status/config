general {
    interval = 5
    output_format = "i3bar"
    colors = true
    color_good = "#00FF00"
    color_degraded = "#FFFF00"
    color_bad = "#FF0000"
}

order += "battery 0"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "tztime local"

battery 0 {
    format = "%status %percentage %remaining"
    format_down = ""
    status_chr = "🔌"
    status_bat = "🔋"
    status_unk = "❔"
    status_full = "🔋"
}

disk "/" {
    format = "💾: %percentage_used"
}

cpu_usage {
    format = "👀: %usage"
}

memory {
    format = "🚽: %percentage_used"
}

tztime local {
    format = "%Y-%m-%d %I:%M:%S %p"
}
