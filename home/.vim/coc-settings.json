{
    "codeLens.enable": true,
    "inlayHint.enable": false,
    "coc.preferences.formatOnSaveFiletypes": ["rust", "c"],

    "clangd.arguments": ["--header-insertion=never", "--inlay-hints=false", "--clang-tidy"],
    "clangd.inlayHints.enable": false,

    "rust-analyzer.lens.enable": false,
    "rust-analyzer.lens.run.enable": true,
    "rust-analyzer.lens.debug.enable": true,
    "rust-analyzer.lens.implementations.enable": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,

    "languageserver": {
        "wgsl": {
            "command": "wgsl_analyzer",
            "filetypes": ["wgsl"]
         }
    },
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/17.0.3/clangd_17.0.3/bin/clangd"
}
